<div class="container">
	<div class="jumbotron">

		<h1>Users#show Attempt at User specific page</h1>
		<p>Find me in app/views/users/show.html.erb</p>

		<%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "btn btn-danger btn-lg") %> 

	</div>
	
<!-- New kit buttons toolbar -->
<div class="btn-group btn-group-justified" role="group" aria-label="...">
	<div class="btn-group" role="group">
	  <button type="button" class="btn btn-info"><%= link_to "Add New Boat", new_boat_path %></button>
	</div>
  <div class="btn-group" role="group">
	  <button type="button" class="btn btn-success"><%= link_to "Add New Bike", new_bike_path %></button>
	</div>
  <div class="btn-group" role="group">
	  <button type="button" class="btn btn-warn"><%= link_to "Add New Board", new_boat_path %></button>
	</div>
</div>
<!-- End New kit buttons toolbar -->
<div class="container">
	<div class="col-md-3">
		<%= image_tag("27701327-silhouette-kayakers-kayak-copy.jpg", :alt => "kayaker") %>
	</div>

<!-- Boat Table -->

	<div class="col-md-6 col-md-offset-3">
		<div id="boats">
			<h2>My Boats</h2>
			<div class="table-responsive">
				<table class="table">
					<tr>
						<th>Boat Name</th> 
						<th>Manufacturing No.</th> 
					</tr>
					<tbody></tbody>
					<% if @user.boats.each do |boat|%>
						<tr>
							<td><%= boat.name %></td>
							<td><%= boat.manufacturing_no %></td>
						</tr>
						<%end%>
					<%end%>		
				</table>
			</div>
		</div>
	</div>
</div>


<!-- Bike Table -->
<div class="container">
	<div class="col-md-6">
			<div id="bikes">
				<h2>My Bikes</h2>
				<div class="table-responsive">
					<table class="table">
						<tr>
							<th>Bike Name</th> 
							<th>Manufacturing No.</th> 
						</tr>
						<tbody></tbody>
						<% if @user.bikes.each do |bike|%>
							<tr>
								<td><%= bike.name %></td>
								<td><%= bike.manufacturing_no %></td>
							</tr>
							<%end%>
						<%end%>		
					</table>
				</div>
			</div>
		</div>

	<div class="col-md-3 col-md-offset-6">
		<%= image_tag("0451fd355b84e607737215d3770a0489_copy2.jpg", :alt => "biker") %>
	</div>

</div>

</div>