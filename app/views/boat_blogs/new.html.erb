<div calss="container">
	<div class="jumbotron">
		<h1>Create a new Boat post</h1>
			<%= link_to "Return to My Boat Blog", user_boat_blogs_path(current_user), class: "btn btn-info btn-lg"%>
			<%= link_to "Return to users page", user_path(current_user), class: "btn btn-warning btn-lg" %>
	</div>

	<%= form_for(:boat_blog, :url => {:action => :create}) do |f| %>

		<div class="form_field">
			<%= f.label :date %>
			<%= f.date_field :date %>
		</div>
		<div class="form_field">
			<%= f.label :location %>
			<%= f.text_field :location %>
		</div>
		<div class="form_field">
			<%= f.label :post %>
			<%= f.text_area :post %>
		</div>
		<div class="form_field">
			<%= f.submit %>
		</div>

	<%end%>


</div>