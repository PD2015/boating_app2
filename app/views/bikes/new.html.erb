<h1>Bikes#new</h1>
<p>Find me in app/views/bikes/new.html.erb</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@bike) do |f| %>
    

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :manufacturing_no %>
      <%= f.text_field :manufacturing_no, class: 'form-control'%>

      <%= f.submit "Add new bike", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>